<div id="main">
    <div>
        <h1>My projects</h1>
        {{#if isAdmin}}
        <div>
            <a href="/projects/new">New Project</a>
        </div>
        {{/if}}

        <div>
            {{#if dbError}}
            <div>
                Problem with the database<br />
                {{theError}}
            </div>
            {{else}}
            {{#each projects}}
            <div>
                <div class="card">
                    <div class="card-header">
                        <div>{{projectTitle}}</div>
                        <div>{{projectDescription}}</div>
                        <div>{{link}}</div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/if}}
        </div>
    </div>
</div>