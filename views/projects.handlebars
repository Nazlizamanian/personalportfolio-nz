<div id="main">
    <div>
        <h1>My projects</h1>
        {{#if isAdmin}}
        <div>
            <a href="/projects/new">New Project</a>     
        </div>
        {{/if}}
        <div class="card-container-p">
            {{#if dbError}}
            <div>
                Problem with the database<br />
                {{theError}}
            </div>
            {{else}}
            {{#each projects}}
            <div class="card-container-project">
                <div class="card-header-project">
                    <div>{{projectTitle}}</div>
                    {{!-- <div>{{projectDescription}}</div> --}}
                    <div>{{projectYear}}</div>
                </div>
                {{#if ../isAdmin}}
                <div>
                  <a href="/projects/modify/{{projectID}}">Modify Project</a>
                  <a href="/projects/delete/{{projectID}}" id="delete">DELETE Project</a>
                  <a href="/projects-more/{{projectID}}"> Learn More</a>
                  </div>
                  {{/if}}
            </div>
            {{/each}}
            {{/if}}
        </div>
    </div>
</div>
